<% title "#{params[:year]} Job Stats" %>
<% selected_nav "job_posting" %>

<%= render :partial => "admin/job_reports/tabs", :locals => { :tab => "stats" } %>

<div id="content"><div class="pad">

  <table>


    <tr>
       <td> <h2>Job Registration Information</h2></td>
    </tr>

    <tr>
      <td>Total Non-Staff Registered: <%= @total_non_staff_registered %></td>
    </tr>

    <tr>
      <td>Total Staff Registered: <%= @total_staff_registered %></td>
    </tr>

    <tr>
      <td>Total Registered: <%= @total_registered %></td>
    </tr>

    <tr>
      <td>Total Income: <%= number_to_currency(@total_paid, :unit => "$") %></td>
    </tr>

    <tr>
      <td> <h2>Job Interest Information</h2></td>
    </tr>

    <tr>
      <td>Total Interested: <%= @total_interested %></td>
    </tr>

    <tr>
      <td>Total Contacted: <%= @total_contacted %></td>
    </tr>

    <tr>
      <td>Total Hired: <%= @total_hired %></td>
    </tr>

    <tr>
      <td>Total Job Interests: <%= @job_interest_yearly_total %></td>
    </tr>

    <tr>
      <td>Total Job Interests (All Years): <%= @job_interest_total %></td>
    </tr>

    <tr>
      <td><h2>Job Posting Information</h2></td>
    </tr>

    <tr>
      <td>Complete: <%= @job_postings_complete %></td>
    </tr>

    <tr>
      <td>Incomplete: <%= @job_postings_incomplete %></td>
    </tr>

    <% @job_fee_counts.each_with_index do |job_fee, i| %>
      <tr>
        <td><%= number_to_currency(JobFee.find(job_fee[0]).fee, :unit => "$") %>: <%= job_fee[1] %> (<%= @job_fee_percents[i] %>%) </td>
      </tr>
    <% end %>

    <tr>
      <td>No Interests: <%= @no_interests %> (<%= @no_interests_percent %>%)</td>
    </tr>

    <tr>
      <td><h3>Active</h3></td>
    </tr>

    <tr>
      <td>Active: <%= @active %></td>
    </tr>

    <tr>
      <td>Active (No Interests): <%= @active_no_interests %></td>
    </tr>

    <tr>
      <td>Active (Not Staff, No Interests): <%= @active_not_staff_no_interests %></td>
    </tr>

    <tr>
      <td>Active (Staff, No Interests): <%= @active_staff_no_interests %></td>
    </tr>

    <tr>
      <td><h3>Expired</h3></td>
    </tr>

    <tr>
      <td>Expired: <%= @expired %></td>
    </tr>

    <tr>
      <td>Expired (No Interests): <%= @expired_no_interests %></td>
    </tr>

    <tr>
      <td>Expired (Not Staff, No Interests): <%= @expired_not_staff_no_interests %></td>
    </tr>

    <tr>
      <td>Expired (Staff, No Interests): <%= @expired_staff_no_interests %></td>
    </tr>

  </table>

</div></div>